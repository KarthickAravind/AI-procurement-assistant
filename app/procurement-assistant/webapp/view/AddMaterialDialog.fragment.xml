<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="addMaterialDialog" title="Add New Material" contentWidth="500px" contentHeight="600px">
        <content>
            <VBox id="addMaterialFormVBox" class="sapUiMediumMargin">
                <Label id="materialIdLabel" text="Material ID *" class="sapUiTinyMarginBottom"/>
                <Input id="materialIdInput" placeholder="e.g., MAT016" required="true" class="sapUiMediumMarginBottom"/>

                <Label id="materialNameLabel" text="Material Name *" class="sapUiTinyMarginBottom"/>
                <Input id="materialNameInput" placeholder="e.g., Steel Pipes" required="true" class="sapUiMediumMarginBottom"/>

                <Label id="supplierLabel" text="Supplier ID *" class="sapUiTinyMarginBottom"/>
                <Input id="supplierInput" placeholder="e.g., 9001" required="true" class="sapUiMediumMarginBottom"/>

                <Label id="quantityLabel" text="Quantity *" class="sapUiTinyMarginBottom"/>
                <Input id="quantityInput" type="Number" placeholder="e.g., 100" required="true" class="sapUiMediumMarginBottom"/>

                <Label id="categoryLabel" text="Category" class="sapUiTinyMarginBottom"/>
                <Select id="categoryInput" class="sapUiMediumMarginBottom">
                    <core:Item id="constructionItem" key="Construction" text="Construction"/>
                    <core:Item id="manufacturingItem" key="Manufacturing" text="Manufacturing"/>
                    <core:Item id="logisticsItem" key="Logistics" text="Logistics"/>
                    <core:Item id="generalItem" key="General" text="General"/>
                </Select>

                <Label id="priceLabel" text="Unit Price" class="sapUiTinyMarginBottom"/>
                <Input id="priceInput" type="Number" placeholder="e.g., 150.00" class="sapUiMediumMarginBottom"/>

                <Label id="unitLabel" text="Unit" class="sapUiTinyMarginBottom"/>
                <Input id="unitInput" placeholder="e.g., pcs, kg, meters" value="pcs" class="sapUiMediumMarginBottom"/>

                <Label id="descriptionLabel" text="Description" class="sapUiTinyMarginBottom"/>
                <TextArea id="descriptionInput" placeholder="Material description..." rows="3" class="sapUiMediumMarginBottom"/>
            </VBox>
        </content>
        <buttons>
            <Button id="saveNewMaterialBtn" text="Save" type="Emphasized" press="onSaveNewMaterial"/>
            <Button id="cancelAddMaterialBtn" text="Cancel" press="onCancelAddMaterial"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
